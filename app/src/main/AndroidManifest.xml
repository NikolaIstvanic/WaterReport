<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.nikola.waterreport">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".controllers.WelcomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.MainActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".controllers.RegistrationActivity"
            android:label="@string/title_activity_registration" />
        <activity
            android:name=".controllers.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".controllers.ProfileActivity"
            android:label="@string/title_activity_profile" />
        <activity
            android:name=".controllers.ReportActivity"
            android:label="@string/title_activity_report" />
        <activity
            android:name=".controllers.ViewAllActivity"
            android:label="@string/title_activity_view_all"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>
</manifest>
