<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_historical_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nikola.waterreport.controllers.HistoricalViewActivity"
    tools:showIn="@layout/activity_historical_view">

    <Button
        android:text="Submit Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/choose_report" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|date"
        android:ems="10"
        android:layout_marginBottom="43dp"
        android:id="@+id/choose_year"
        android:layout_above="@+id/choose_report"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Year:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="21dp"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/choose_year"
        android:layout_toStartOf="@+id/choose_report" />

    <TextView
        android:text="Lattitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choose_year"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginBottom="31dp"
        android:id="@+id/textView5" />

    <TextView
        android:text="Longitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textView5"
        android:id="@+id/textView6" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|date"
        android:ems="10"
        android:id="@+id/choose_Lat"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|date"
        android:ems="10"
        android:id="@+id/choose_Long"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/choose_Long"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:id="@+id/spinner2" />
</RelativeLayout>
