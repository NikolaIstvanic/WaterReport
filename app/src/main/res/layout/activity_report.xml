<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ProgressBar
        android:id="@+id/reg_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:visibility="gone" />

    <Button
        android:text="Register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit_report"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:maxLines="1"
        android:layout_below="@+id/reg_progress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:maxLines="1"
        android:layout_below="@+id/report_number"
        android:layout_toRightOf="@+id/reg_progress"
        android:layout_toEndOf="@+id/reg_progress"
        android:layout_marginTop="38dp" />

    <TextView
        android:id="@+id/report_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:maxLines="1"
        android:layout_below="@+id/text_time"
        android:layout_toRightOf="@+id/reg_progress"
        android:layout_toEndOf="@+id/reg_progress"
        android:layout_marginTop="34dp" />

    <EditText
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/prompt_password_again"
        android:imeActionId="@+id/login"
        android:imeActionLabel="@string/action_sign_in_short"
        android:imeOptions="actionUnspecified"
        android:inputType="textPassword"
        android:maxLines="1"
        android:layout_below="@+id/user_name"
        android:layout_toRightOf="@+id/reg_progress"
        android:layout_toEndOf="@+id/reg_progress"
        android:layout_marginTop="43dp" />

</RelativeLayout>
